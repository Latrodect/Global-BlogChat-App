<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blogchatapp.blogapp.Login">


    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profile_back"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/emailHolder"
        android:layout_marginTop="270dp"
        android:background="@drawable/login_register"
        android:layout_width="380dp"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/passwordHolder"
        android:layout_marginTop="350dp"
        android:background="@drawable/login_register"
        android:layout_width="380dp"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp" />

    <EditText
        android:layout_marginRight="20dp"
        android:theme="@style/EditTextTheme"
        android:id="@+id/emailLogin"
        android:drawableRight="@drawable/ic_mail_outline_black_24dp"
        android:layout_width="355dp"
        android:textColorHint="@color/Gray"
        android:backgroundTint="@color/Gray"
        android:layout_height="wrap_content"
        android:ems="8"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="265dp"
        android:inputType="textPersonName"
        android:hint="Email"/>

    <EditText
        android:layout_marginRight="20dp"
        android:theme="@style/EditTextTheme"
        android:id="@+id/passwordLogin"
        android:drawableRight="@drawable/ic_lock_outline_black_24dp"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:ems="8"
        android:textColorHint="@color/Gray"
        android:backgroundTint="@color/Gray"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="345dp"
        android:inputType="textPersonName"
        android:hint="Password" />


    <Button
        android:id="@+id/LoginButton"
        android:textColor="@color/ScreenDark"
        android:background="@drawable/custom_login_reg"
        android:layout_marginTop="470dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="Login" />

    <TextView
        android:id="@+id/textView12"
        android:textAlignment="center"
        android:layout_marginTop="580dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/ScreenDark"
        android:textSize="11dp"
        android:layout_centerHorizontal="true"
        android:text="For more help click this text." />



    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Gray"
        android:textSize="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="bottom"
        android:layout_alignParentBottom= "true"
        android:layout_marginBottom="20dp"
        android:text="Created with Love   Copyright BahadirNural &#169; 2020 " />

    <TextView
        android:id="@+id/ttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="153dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/alegreya_sc"
        android:text=""
        android:textColor="@color/white"
        android:textSize="42dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:gravity="center">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="cursive"
            android:scaleType="centerCrop"
            android:text="NBlogApp"
            android:textColor="@color/white"
            android:textSize="30dp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/loginProgress"
        style="?android:attr/progressBarStyle"
        android:layout_marginTop="470dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:background="@drawable/progress_bar"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/GoLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGÄ°STER"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:textColor="@color/ScreenDark"
        android:layout_marginTop="530dp"
        android:background="@drawable/custom_sign_in"/>

</RelativeLayout>