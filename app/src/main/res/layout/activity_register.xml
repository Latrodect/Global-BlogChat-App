<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blogchatapp.blogapp.Register">
    <TextView
        android:id="@+id/background"
        android:background="@drawable/profile_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/UserNameHolder"
        android:layout_marginTop="250dp"
        android:background="@drawable/login_register"
        android:layout_width="380dp"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/PasswordHolder"
        android:layout_marginTop="310dp"
        android:background="@drawable/login_register"
        android:layout_width="380dp"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/emailHolder"
        android:layout_marginTop="365dp"
        android:background="@drawable/login_register"
        android:layout_width="380dp"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/PhoneHolder"
        android:layout_marginTop="415dp"
        android:background="@drawable/login_register"
        android:layout_width="380dp"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp" />

    <EditText

        android:layout_marginRight="20dp"
        android:id="@+id/fullName"
        android:textColorHint="@color/Gray"
        android:backgroundTint="@color/Gray"
        android:layout_centerHorizontal="true"
        android:theme="@style/EditTextTheme"
        android:layout_marginLeft="20dp"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:ems="8"
        android:textColor="@color/Gray"
        android:drawableRight="@drawable/ic_person_black_24dps"
        android:inputType="textPersonName"
        android:hint="Full Name"
        android:layout_marginTop="245dp"/>


    <EditText
        android:textColor="@color/Gray"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:theme="@style/EditTextTheme"
        android:id="@+id/password"
        android:backgroundTint="@color/Gray"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:ems="8"
        android:textColorHint="@color/Gray"
        android:inputType="textPersonName"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="300dp"
        android:drawableRight="@drawable/ic_lock_outline_black_24dp"
        android:hint="Password"/>

    <EditText
        android:textColor="@color/Gray"
        android:layout_marginRight="20dp"
        android:theme="@style/EditTextTheme"
        android:id="@+id/email"
        android:layout_width="355dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:ems="8"
        android:backgroundTint="@color/Gray"
        android:drawableRight="@drawable/ic_mail_outline_black_24dp"
        android:inputType="textPersonName"
        android:hint="Email"
        android:textColorHint="@color/Gray"
        android:layout_marginTop="355dp"
        android:layout_marginLeft="20dp" />

    <EditText
        android:textColor="@color/Gray"
        android:layout_marginRight="20dp"
        android:theme="@style/EditTextTheme"
        android:id="@+id/phoneNum"
        android:textColorHint="@color/Gray"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/Gray"
        android:drawableRight="@drawable/ic_phone_iphone_black_24dp"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="410dp"
        android:hint="Phone"
        android:ems="8"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/RegisterButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="480dp"
        android:textColor="@color/ScreenDark"
        android:background="@drawable/custom_login_reg"/>

    <TextView
        android:id="@+id/Help"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="592dp"
        android:text="Do you Have Account? Go to Login Page."
        android:textColor="@color/ScreenDark"
        android:textSize="12dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:gravity="center">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="cursive"
            android:scaleType="centerCrop"
            android:text="NBlogApp"
            android:textColor="@color/white"
            android:textSize="30dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Gray"
        android:textSize="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="bottom"
        android:layout_alignParentBottom= "true"
        android:layout_marginBottom="20dp"
        android:text="Created with Love   Copyright BahadirNural &#169; 2020 " />

    <ImageView
        android:id="@+id/regUserPhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/profile_view_circle" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="145dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:background="@drawable/ic_add_black_24dp" />

    <ProgressBar
        android:id="@+id/regProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_marginTop="640dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>

