<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blogchatapp.blogapp.Authentication">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profile_back"/>

    <TextView
        android:id="@+id/backtt"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="50dp"
        android:background="@color/ScreenDark" />

    <EditText
        android:id="@+id/DisplayNameUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="60dp"
        android:drawableRight="@drawable/update_user"
        android:ems="10"
        android:hint="Display Name"
        android:inputType="textPersonName"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/EmailUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="240dp"
        android:layout_marginRight="60dp"
        android:drawableRight="@drawable/ic_mail_outline_black_24dp"
        android:ems="10"
        android:hint="Mail Adress"
        android:inputType="textPersonName"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/AboutUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="300dp"
        android:layout_marginRight="60dp"
        android:drawableRight="@drawable/aboutyou"
        android:ems="10"
        android:hint="About You"
        android:inputType="textPersonName"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/Biographis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="360dp"
        android:layout_marginRight="60dp"
        android:drawableRight="@drawable/biographi"
        android:ems="10"
        android:hint="Biographi"
        android:inputType="textPersonName"
        android:textSize="12dp" />


    <EditText
        android:id="@+id/phoneNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="420dp"
        android:layout_marginRight="60dp"
        android:drawableRight="@drawable/phonee"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="textPersonName"
        android:textSize="12dp" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_centerHorizontal="true"
        app:backgroundTint="@color/ScreenDark"
        app:rippleColor="#E6D5D5"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/ic_check_black_24dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/UpdateProfileFab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImageUpdate"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bercin" />

</RelativeLayout>