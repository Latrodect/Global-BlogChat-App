<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blogchatapp.blogapp.chatPage">
    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ScreenDark"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="206dp" />
    <View
        android:id="@+id/view3"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@color/Gray"
        android:backgroundTint="@color/Gray" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_view_circle" />
    <EditText
        android:id="@+id/ChatWriteText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/commit"
        android:ems="8"
        android:textColor="@color/ScreenDark"
        android:hint="Share Your Oppinion"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColorHint="@color/Green"
        android:textSize="14dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        app:backgroundTint="@color/ScreenDark"
        app:rippleColor="#E6D5D5"
        app:srcCompat="@drawable/send"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/ChatShareButton"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp" />

</RelativeLayout>